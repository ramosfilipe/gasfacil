<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="boleiros.gas_facil.login.InformacoesNovoUsuario">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textViewNovoUsuarioCima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:text="Informe um nome de usuário"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/textViewNovoUsuarioBaixo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNovoUsuarioCima"
            android:layout_centerHorizontal="true"
            android:text="e senha"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_blue_dark" />

        <EditText
            android:id="@+id/campoUser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="195dp"
            android:inputType="text"
            android:text="Nome de usuário"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:id="@+id/campoPasswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/campoUser"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:text="Senha"
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/botaoContinuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewNovoUsuarioCima"
            android:layout_alignLeft="@+id/textViewNovoUsuarioCima"
            android:layout_alignRight="@+id/textViewNovoUsuarioCima"
            android:layout_alignStart="@+id/textViewNovoUsuarioCima"
            android:layout_below="@+id/campoPasswd"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="42dp"
            android:background="@drawable/button_border"
            android:text="Continuar"
            android:textColor="@android:color/holo_blue_light" />


    </RelativeLayout>
</RelativeLayout>
