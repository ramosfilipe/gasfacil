<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="boleiros.gas_facil.login.FragmentEnderecoNovoUsuario"
    android:id="@+id/relativeEnderecoNovoUsuario">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Informe seu endereço"
        android:id="@+id/textViewInformacoesPessoaisTagPerfil"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Rua"
        android:ems="10"
        android:singleLine="true"

        android:textColor="@android:color/darker_gray"
        android:id="@+id/editTextNomeRua"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textViewInformacoesPessoaisTagPerfil"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/linearNumeroComplemento"
        android:layout_below="@+id/editTextNomeRua"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/editTextNumeroRua"
            android:textColor="@android:color/darker_gray"
            android:layout_weight="1"
            android:text="Número" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"

            android:textColor="@android:color/darker_gray"
            android:inputType="textPersonName"
            android:text="CEP"
            android:layout_weight="1"

            android:ems="10"
            android:id="@+id/editTextCEP" />
    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:inputType="textPersonName"
        android:text="Complemento"
        android:singleLine="true"

        android:ems="10"
        android:id="@+id/editTextComplemento"
        android:layout_below="@+id/linearNumeroComplemento"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:background="@drawable/button_border"
        android:id="@+id/buttonContinuarEndereco"
        android:textColor="@android:color/holo_blue_light"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textViewInformacoesPessoaisTagPerfil"
        android:singleLine="true"

        android:layout_alignStart="@+id/textViewInformacoesPessoaisTagPerfil"
        android:layout_marginBottom="59dp"
        android:layout_alignRight="@+id/textViewInformacoesPessoaisTagPerfil"
        android:layout_alignEnd="@+id/textViewInformacoesPessoaisTagPerfil" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="@android:color/darker_gray"
        android:text="Bairro"
        android:singleLine="true"

        android:ems="10"
        android:id="@+id/editTextBairro"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/editTextComplemento"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:singleLine="true"

        android:text="Ponto de referência"
        android:ems="10"
        android:id="@+id/editTextPontoDeReferencia"
        android:layout_below="@+id/editTextBairro"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
