<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeInformacoesPessoais"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="boleiros.gas_facil.login.FragmentInformacoesPessoais">


    <TextView
        android:id="@+id/textViewInformacoesPessoaisTagPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="Informações pessoais"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_blue_dark" />

    <EditText
        android:id="@+id/editTextNomeInfoPessoais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewInformacoesPessoaisTagPerfil"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nome"
        android:textColor="@android:color/darker_gray" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextNomeInfoPessoais"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="E-mail"
        android:textColor="@android:color/darker_gray" />

    <EditText
        android:id="@+id/editTextTelefoneInfoPessoais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextEmail"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Telefone"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/buttonContinuarInformacoesPessoais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewInformacoesPessoaisTagPerfil"
        android:layout_alignLeft="@+id/textViewInformacoesPessoaisTagPerfil"
        android:layout_alignRight="@+id/textViewInformacoesPessoaisTagPerfil"
        android:layout_alignStart="@+id/textViewInformacoesPessoaisTagPerfil"
        android:layout_below="@+id/editTextTelefoneInfoPessoais"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_border"
        android:text="Continuar"
        android:textColor="@android:color/holo_blue_light" />
</RelativeLayout>
